@model IEnumerable<WEBTEST.Infra.EF.TBCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Category Name  @*@Html.DisplayNameFor(model => model.nameCategory)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nameCategory)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default"> @Html.ActionLink("Edit", "Edit", new { id = item.idCategory }) </button>
                <button type="button" class="btn btn-default"> @Html.ActionLink("Details", "Details", new { id = item.idCategory })</button>
                <button type="button" class="btn btn-default"> @Html.ActionLink("Delete", "Delete", new { id = item.idCategory })</button>
            </div>
        </td>
    </tr>
}

</table>
