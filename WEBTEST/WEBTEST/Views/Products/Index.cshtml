@model IEnumerable<WEBTEST.Infra.EF.TBProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nameProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.priceProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descriptopnProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amountProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TBCategory.nameCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nameProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.priceProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imageProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descriptopnProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amountProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TBCategory.nameCategory)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default"> @Html.ActionLink("Edit", "Edit", new { id = item.idProduct }) </button>
                <button type="button" class="btn btn-default"> @Html.ActionLink("Details", "Details", new { id = item.idProduct })</button>
                <button type="button" class="btn btn-default"> @Html.ActionLink("Delete", "Delete", new { id = item.idProduct })</button>
            </div>
        </td>
    </tr>
}

</table>
